generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Class {
  id                 String    @id @default(cuid())
  name               String
  tier               String
  joinCode           String    @unique
  teacherId          String?
  allowMediaUploads  Boolean   @default(false)
  mediaRetentionDays Int?
  createdAt          DateTime  @default(now())
  students           Student[]
  attempts           Attempt[]
  teacher            User?     @relation(fields: [teacherId], references: [id])
  assessmentSessions AssessmentSession[]
  evidenceCaptures   EvidenceCapture[]

  @@index([teacherId])
}

model Student {
  id                       String    @id @default(cuid())
  classId                  String
  nickname                 String
  email                    String?
  legalName                String?   // Identity binding (post-assessment); minimal PII
  identityBoundAt          DateTime? // When pseudonym was bound to legal identity
  pinHash                  String?
  pinUpdatedAt             DateTime?
  magicLinkToken           String?
  magicLinkExpires         DateTime?
  currentStreak            Int       @default(0)
  currentQuestionHash      String?
  currentQuestionPrompt    String?
  currentSkillTag          String?
  currentQuestionStartedAt DateTime?
  createdAt                DateTime  @default(now())
  lastActiveAt             DateTime?
  class                    Class     @relation(fields: [classId], references: [id])
  attempts                 Attempt[]
  assessmentOverrides      AssessmentOverride[]
  assessmentSessions        AssessmentSession[]
  evidenceCaptures         EvidenceCapture[]

  @@index([classId])
  @@index([email])
}

model Attempt {
  id             String   @id @default(cuid())
  classId        String
  studentId      String
  questionHash   String
  prompt         String
  skillTag       String
  difficulty     Int
  correctAnswer  String
  studentAnswer  String
  isCorrect      Boolean
  responseTimeMs Int
  metadata       Json?
  createdAt      DateTime @default(now())
  class          Class    @relation(fields: [classId], references: [id])
  student        Student  @relation(fields: [studentId], references: [id])
  evidenceItems  EvidenceItem[]
  aiAnnotations  AIAnnotation[]

  @@index([classId, createdAt])
  @@index([studentId, createdAt])
  @@index([skillTag, isCorrect])
}

model AssessmentOverride {
  id             String   @id @default(cuid())
  studentId      String
  unitId         String
  overrideStatus String
  assessorNote   String?
  assessorId     String
  createdAt      DateTime @default(now())
  student        Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, unitId])
  @@index([studentId])
  @@index([unitId])
}

// --- Assessment Evidence Graph (EPIC 0) ---

model CompetenceCriterion {
  id          String   @id @default(cuid())
  unitId      String
  code        String
  description String
  createdAt   DateTime @default(now())
  evidenceItems EvidenceItem[]

  @@unique([unitId, code])
  @@index([unitId])
}

model FailureMode {
  id          String   @id @default(cuid())
  unitId      String
  tag         String
  description String?
  createdAt   DateTime @default(now())

  @@unique([unitId, tag])
  @@index([unitId])
}

model EvidenceItem {
  id         String   @id @default(cuid())
  attemptId  String
  criterionId String
  supporting  Boolean  // true = supports criterion, false = contradicts
  createdAt  DateTime @default(now())
  attempt    Attempt  @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  criterion  CompetenceCriterion @relation(fields: [criterionId], references: [id], onDelete: Cascade)

  @@index([attemptId])
  @@index([criterionId])
}

model AIAnnotation {
  id                      String   @id @default(cuid())
  attemptId               String
  confidenceScore         Float    // 0â€“1, bounded
  reasonForReview         String?
  suggestedFailureModeTags Json?   // string[] from rubric/response only
  modelVersion            String?
  createdAt               DateTime @default(now())
  attempt                 Attempt  @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  @@index([attemptId])
}

model EvidencePack {
  id             String    @id @default(cuid())
  studentId      String
  unitId         String
  classId        String
  assessorId     String
  exportedAt     DateTime  @default(now())
  identityBoundAt DateTime?
  snapshot       Json      // criteria, cited attempts, assessor decisions
  pdfBlobUrl     String?

  @@index([studentId, unitId])
  @@index([exportedAt])
}

// --- Field Video Assessment ---

enum AssessmentSessionMode {
  SCENARIO
  FIELD_VIDEO
}

model AssessmentSession {
  id          String               @id @default(cuid())
  classId     String
  studentId   String
  unitId      String
  mode        AssessmentSessionMode
  startedAt   DateTime             @default(now())
  completedAt DateTime?
  class       Class                @relation(fields: [classId], references: [id], onDelete: Cascade)
  student     Student              @relation(fields: [studentId], references: [id], onDelete: Cascade)
  evidenceCaptures EvidenceCapture[]

  @@index([classId])
  @@index([studentId])
  @@index([unitId, startedAt])
}

enum EvidenceCaptureType {
  PHOTO
  VIDEO
}

model EvidenceCapture {
  id              String    @id @default(cuid())
  sessionId       String?
  studentId       String
  classId         String
  unitId          String
  stepId          String
  type            EvidenceCaptureType
  createdAt       DateTime  @default(now())
  storagePath     String
  thumbnailPath   String?
  durationSeconds Int?
  notes           String?
  consentStored   Boolean   @default(false)
  session         AssessmentSession? @relation(fields: [sessionId], references: [id], onDelete: SetNull)
  student         Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)
  class           Class     @relation(fields: [classId], references: [id], onDelete: Cascade)
  captureAssessment CaptureAssessment?

  @@index([sessionId])
  @@index([studentId])
  @@index([classId])
  @@index([unitId])
  @@index([createdAt])
}

model CaptureAssessment {
  id                  String   @id @default(cuid())
  captureId           String   @unique
  aiOverallStatus     String?  // OK | WARN | CRIT | UNKNOWN
  aiConfidence        Float?
  aiChecks            Json?    // [{ checkId, status, confidence, evidence, issue?, fix? }]
  aiSummary           String?
  aiQuestions         Json?    // askNext[]
  triageFlags         Json?    // redFlags + deterministic CRITICAL
  trainerFinalStatus  String?
  trainerNote         String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  capture             EvidenceCapture @relation(fields: [captureId], references: [id], onDelete: Cascade)

  @@index([captureId])
}

model AuditEvent {
  id         String   @id @default(cuid())
  actorType  String   // "ai" | "assessor" | "system"
  actorId    String?
  action     String
  entityType String
  entityId   String?
  payload    Json?
  createdAt  DateTime @default(now())

  @@index([entityType, entityId])
  @@index([createdAt])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  classes       Class[]
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
